// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../database.db"
}

model Login {
  id       String @id @default(uuid())
  email    String @unique
  username String @unique
  password String
  type     String   // "operador" | "cliente"
}